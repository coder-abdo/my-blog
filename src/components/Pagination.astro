---
import Link from "./Link.astro";
const { prevUrl, nextUrl } = Astro.props;
---

<nav
    aria-label="Blog Posts"
    style={{
        display: "flex",
        justifyContent: "center",
        alignItems: "center",
        gap: "10px",
    }}
>
    {
        prevUrl && (
            <Link
                text="Prev"
                href={prevUrl}
                style="primary"
                isBorderVisible={true}
                isFilled={false}
                icon={{
                    name: "tabler:arrow-big-left-line",
                    side: "left",
                }}
            />
        )
    }
    {
        nextUrl && (
            <Link
                text="Next"
                href={nextUrl}
                style="primary"
                isBorderVisible={true}
                isFilled={false}
                icon={{
                    name: "tabler:arrow-big-right-line",
                    side: "right",
                }}
            />
        )
    }
</nav>
